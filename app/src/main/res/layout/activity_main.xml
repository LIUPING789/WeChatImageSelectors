<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lp.knightoneadmin.wechatimageselector.MainActivity">

    <include
        android:id="@+id/activity_bar"
        layout="@layout/activity_title_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_bar"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/ediText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="@string/string_send_contetn"
            android:padding="10dp" />

        <com.lp.knightoneadmin.wechatimageselector.view.DragGridView
            android:id="@+id/dragGridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ediText"
            android:layout_margin="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="10dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dip" />

    </RelativeLayout>
</RelativeLayout>
